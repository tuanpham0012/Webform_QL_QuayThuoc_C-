                            html += '<td>' + v.TenSp + '</td>'
                            html += '<td>' + v.MaSp + '</td>'
                            html += '<td>' + v.TenLoaiSp + '</td>'
                            html += '<td>' + v.DonVi + '</td>'
                            html += '<td style="max-width:150px;" class="text-center">'
                            html += '<button data-url="" type="button" name="restore" class="btn btn-info btn-show"><i class="fa fa-info-circle"></i></button>'
