            });
        }

        $('#pag-khachhang').on('click', 'li', function (e) {
            e.preventDefault();
            var p = $(this).text();
            if (p == '«') {
                pageKh--;
                loadKhachHang(pageKh);
            } else if (p == '»') {
                pageKh++;
                loadKhachHang(pageKh);
            } else {
                pageKh = p;
                loadKhachHang(pageKh);
            }

        })

        function loadSanPham(pageSp) {
            $.ajax({
                type: 'get',
                url: '/Restore/SanPham',
                data: {
                    pageIndex: pageSp,
                },
                success: function (data) {
                    console.log(data);
                    $('#db-sanpham').empty();
                    if (data.data.length > 0) {
                        console.log(data.msg)
                        $.each(data.data, function (k, v) {
                            let html = '<tr id="' + v.Id + '">'
