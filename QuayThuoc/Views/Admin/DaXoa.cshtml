                                if (pageSp < data.soTrang) li += '<li class="page-item"><a class="page-link" href ="#" aria-label="Next" id="Next"><span aria-hidden="true">&raquo;</span></a></li>'
                                $('#pag-sanpham').html(li);

                            } else {
