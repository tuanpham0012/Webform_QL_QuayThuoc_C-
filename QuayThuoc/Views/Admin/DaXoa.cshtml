                            }
                        })
                    } else {
                        let html = '<tr><td colspan="7"><span style="color: red">Không có dữ liệu.</span></td><tr>';
                        $('#db-sanpham').append(html);
                    }

                }, error: function (jqXHR, textStatus, errorThrown) { }
            });
        }

        $('#pag-sanpham').on('click', 'li', function (e) {
            e.preventDefault();
            var p = $(this).text();
            if (p == '«') {
                pageSp--;
                loadSanPham(pageSp);
            } else if (p == '»') {
                pageSp++;
                loadSanPham(pageSp);
            } else {
                pageSp = p;
                loadSanPham(pageSp);
            }

        })

        $(document).on('click', 'button[name="restore"]', function () {
            cuteAlert({
                type: "question",
                title: "Khôi phục",
                message: "Bạn có muốn khôi phục record?",
                confirmText: "Đồng Ý",
                cancelText: "Hủy"
            }).then((e) => {
                if (e == ("confirm")) {
                    let id = $(this).closest('tr').attr('id');
                    let tbl = $('#tbl-db').val();
                    $.ajax({
                        type: 'post',
                        url: '/Restore/RestoreData',
                        data: {
                            Id: id,
                            table: tbl,
                        },
                        success: function (data) {
                            console.log(data)
                            if (data.code == 200) {
                                cuteToast({
                                    type: "success", // or 'info', 'error', 'warning'
                                    message: data.msg,
                                    timer: 5000
                                });
                            } else {
                                cuteToast({
                                    type: "error", // or 'info', 'error', 'warning'
                                    message: data.msg,
                                    timer: 5000
                                });
                            }
                            if (tbl == "NhanVien") {
                                loadNhanVien(pageNv)
                            } else if (tbl == "KhachHang") {
                                loadKhachHang(pageKh)
                            } else if (tbl == "SanPham") {
                                loadSanPham(pageSp)
                            }
                        }, error: function (jqXHR, textStatus, errorThrown) { }
                    })
                } else {
                    return;
                }
            })
            
        })
        
        $('#tbl-db').change(function () {
            table = $('#tbl-db').val();
            if (table == "NhanVien") {
                $('#tbl-nhanvien').show();
                $('#tbl-khachhang').hide();
                $('#tbl-sanpham').hide();
                loadNhanVien(pageNv)
            }
            if (table == "KhachHang") {
                $('#tbl-nhanvien').hide();
                $('#tbl-khachhang').show();
                $('#tbl-sanpham').hide();
                loadKhachHang(pageKh)
            }
            if (table == "SanPham") {
                $('#tbl-nhanvien').hide();
                $('#tbl-khachhang').hide();
                $('#tbl-sanpham').show();
                loadSanPham(pageSp)
            }
        })

    </script>

}

