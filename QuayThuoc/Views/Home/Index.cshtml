@section scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            loadSpPhoBien()
            //loadSpMoi();
        })

        function loadSpPhoBien() {
            $.ajax({
                type: 'get',
                url: '/Home/SpPhoBien',
                success: function (data) {
                    console.log(data);
                    $('#SpPhoBien').empty();
                    if (data.data.length > 0) {
                        $.each(data.data, function (k, v) {
                            let html = '';
                            if (v.GiamGia > 0) {
                                html += '<div class="col-sm-6 col-lg-4 text-center item mb-4" style="width:189px;height:259px;margin:0px 0px 150px 0px;">'
                                html += '<span class="tag">Sale</span>'
                                html += '<a href="/Home/ChiTietSanPham?id=' + v.Id + '"> <img src="../../Content/User_asset/images/' + v.HinhAnh + '" alt="Image" width="179px" height="209px"></a>'
                                html += '<h3 class="text-dark" style="max-width:320px;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;"><a href="shop-single.html">' + v.TenSp + '</a></h3>'
                                html += '<p class="price"><del>' + formatter.format(v.GiaBan) + '</del> &mdash; ' + formatter.format(v.GiaBan - v.GiamGia) + '</p>'
                                html += '</div>'

                            } else {
                                html += '<div class="col-sm-6 col-lg-4 text-center item mb-4" style="width:189px;height:259px;margin:0px 0px 150px 0px;">'
                                html += '<a href="/Home/ChiTietSanPham?id=' + v.Id + '"> <img src="../../Content/User_asset/images/' + v.HinhAnh + '" alt="Image" width="189px" height="209px"></a>'
                                html += '<h3 class="text-dark"style="max-width:320px;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;"><a href="shop-single.html">' + v.TenSp + '</a></h3>'
                                html += '<p class="price">' + formatter.format(v.GiaBan) + '</p>'
                                html += '</div>'
                            }
                            $('#SpPhoBien').append(html);
                        })

                    } else {
                        let html = '<tr><td colspan="7"><span style="color: red">Không có dữ liệu.</span></td><tr>';
                        $('#SpPhoBien').append(html);
                    }
                }, error: function (jqXHR, textStatus, errorThrown) { }
            })
        }

        function loadSpMoi() {
