                            html += '<h3 class="text-dark"><a href="shop-single.html">Umcka Cold Care</a></h3>'
                            html += '<p class="price">$120.00</p>'
                            html += '</div>'
                            $('#SpMoi').append(html);
                        })

                    } else {
                        let html = '<tr><td colspan="7"><span style="color: red">Không có dữ liệu.</span></td><tr>';
                        $('#SpMoi').append(html);
                    }
                }, error: function (jqXHR, textStatus, errorThrown) { }
